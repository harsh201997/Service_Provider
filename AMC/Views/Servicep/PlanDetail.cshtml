<!DOCTYPE html>
<html lang="en">

@{
    ViewBag.Title = "AddPlan";
     Layout = "~/Views/Shared/sproviderlayout.cshtml";
}

<head>
    <title></title>
</head>
<body>
    <div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">

                <header class="panel-heading">
                    Plan Detail
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        @using (Html.BeginForm())
                        {
                            var p = ViewData["temp"] as AMC.EDM.AdminSp_plan;
                            
                            <div class="form-group">
                                <label>Plan Name:</label>
                                <input type="text" class="form-control" readonly value="@p.sub_name" name="pname">
                            </div>
                            <div class="form-group">
                                <label>Plan Description:</label>
                                <textarea class="form-control" readonly name="pdesc">@p.description</textarea>
                               
                            </div>
                           
                            <div class="form-group">
                                <label>Plan Status:</label>
                                <input type="text" class="form-control" readonly value="@p.status" name="status">
                            </div>
                            <div class="form-group">
                                <label>Charges:</label>
                                <input type="text" class="form-control" readonly value="@p.amount" name="charge">
                            </div>
                            <div class="form-group">
                                <label>Duration</label>
                                <input type="text" class="form-control" readonly value="@p.duration" name="duration">
                            </div>
                           
                            <input type="hidden" value="@p.sub_id" name="pid" />

                            <div>
                                <input type="submit" class="btn btn-danger" value="Enroll-Plan" name="submit" />
                            </div>

                            
                        }

                    </div>

                </div>


            </div>
          
        </div>
        
        <!-- page end-->
    </div>
</body>
</html>