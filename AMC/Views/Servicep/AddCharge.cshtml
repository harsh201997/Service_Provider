@{
    ViewBag.Title = "AddPlan";
    Layout = "~/Views/Shared/sproviderlayout.cshtml";
}


<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <header class="panel-heading">
                Add Charge Rate
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
                    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
                    <script src="~/bvalidator/jquery.bvalidator.js"></script>

                    <script type="text/javascript">
                                    $(document).ready(function () {
                                        $('#form2').bValidator();
                                    });
                    </script>

                    @using (Html.BeginForm("AddCharge", "Servicep", FormMethod.Post, new { @id = "form2" }))
                    {
                        <div class="form-group">
                            <label>Service:</label>
                            <select name="sptype" class="form-control" data-bvalidator="required">

                                @foreach (var item in ViewData["temp"] as List<AMC.Models.Viewsp>)
                                {
                                    <option value="@item.sptype_id">@item.sptype_name</option>
                                }

                            </select>

                        </div>
                        <div class="form-group">
                            <label>Amount:</label>
                           
                            <input type="text" class="form-control" data-bvalidator="required" name="amount" placeholder="Enter Plan Description">
                        </div>
                        <div class="form-group">
                            <label>Description:</label>
                            <textarea name="desc" rows="5" data-bvalidator="required" class="form-control"> </textarea>
                           
                        </div>
                        <input type="submit" name="submit" value="Submit" />

                    }

                </div>

            </div>


        </div>
    </div>


    <!-- page end-->
</div>
<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}