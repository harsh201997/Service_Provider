@{
    ViewBag.Title = "AddPlan";
    Layout = "~/Views/Shared/sproviderlayout.cshtml";
}


<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <header class="panel-heading">
                Plan Payment 
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
                    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
                    <script src="~/bvalidator/jquery.bvalidator.js"></script>

                    <script type="text/javascript">
                                    $(document).ready(function () {
                                        $('#form2').bValidator();
                                    });
                    </script>

                    @using (Html.BeginForm("AdminPayment", "Servicep", FormMethod.Post, new { @id = "form2" }))
                    {

                      
                             <h2><label> Admin Bank Detail</label></h2>
                             <div class="form-group">
                                 <label> After Payment Admin will Give You OTP</label>
                              </div>
                                <div class="form-group">
                                <label>Branch Name;</label>
                                <input type="text" class="form-control" readonly value="@ViewBag.branch">
                            </div>
                            <div class="form-group">
                                <label>IFSC CODE::</label>
                                <input type="text" class="form-control" readonly value="@ViewBag.IFSC">
                            </div>

                            <div class="form-group">
                                <label>MICR CODE</label>
                                <input type="text" class="form-control" readonly value="@ViewBag.MICR">
                            </div>
                            <div class="form-group">
                                <label>Account No</label>
                                <input type="text" class="form-control" readonly value="@ViewBag.acc">
                            </div>
                        <div class="form-group">
                            <label>Enter otp::</label>
                            <input type="text" class="form-control" data-bvalidator="required" name="otp" placeholder="">
                        </div>

                        

                       

                       
                       
                      
                        <input type="submit" name="submit" value="Submit" />

                    }

                </div>

            </div>


        </div>
    </div>
    

    <!-- page end-->
</div>
<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}