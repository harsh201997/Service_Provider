@{
    ViewBag.Title = "UpdateInquiryStatus";
    Layout = "~/Views/Shared/sproviderlayout.cshtml";
}



<div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">

                <header class="panel-heading">
                  Payment Detail
                </header>
                <div class="panel-body">
                    <div class="position-center">
                        @using (Html.BeginForm("UpdateInquiryStatus", "Servicep", FormMethod.Post, new { @id = "form2" }))
                        {
                            var p = ViewData["temp"] as AMC.Models.ServiceInquiry;
                            <input type="hidden" value="@p.userreq_id" name="reqid" />
                            <input type="hidden" value="@p.token" name="dbtoken" />
                           
                            <div class="form-group">
                                <label>Customer Name:</label>
                                <input type="text" class="form-control" readonly value="@p.fname @p.lname" name="pname">
                            </div>
                            <div class="form-group">
                                <label>Description:</label>
                                <textarea class="form-control" name="pdesc"></textarea>
                               
                            </div>
                           
                            
                            <div class="form-group">
                                <label>Amount:</label>
                                <input type="text" class="form-control" readonly value="@p.amount" name="charge">
                            </div>
                            <div class="form-group">
                                <label>Extra Amount</label>
                                <input type="text" class="form-control"  value="" name="extraamount">
                            </div>
                            <div class="form-group">
                                <label>Enter Customer Token</label>
                                <input type="text" class="form-control" value="" name="token">
                            </div>
                          

    <div>
        <input type="submit" value="submit" name="submit" />
    </div>

                        }     

                         
                    </div>

                </div>


            </div>
            
        </div>
        


        <!-- page end-->
    </div>
