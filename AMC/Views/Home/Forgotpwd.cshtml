@{
    ViewBag.Title = "Forgotpwd";
    Layout = "~/Views/Shared/HomeLayout.cshtml";
}



<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->

    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
    <script src="~/bvalidator/jquery.bvalidator.js"></script>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#form2').bValidator();
    });
    </script>
    @using (Html.BeginForm("Forgotpwd", "Home", FormMethod.Post, new { @id = "form2" }))
    {


        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                       
                    </header>
                    <div class="panel-body">
                        <div class="position-center">

                            <div class="form-group">
                                <label for="exampleInputEmail1">Registered Email ID</label>
                                <input type="text" class="form-control" id="exampleInputEmail1" data-bvalidator="required" name="email1" placeholder="Enter Email ID">

                            </div>
                           

                            <input type="submit" value="submit" class="btn btn-info" />
                        </div>

                    </div>
                </section>

            </div>
           
        </div>


    }


    <!-- page end-->
</div>
<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}
