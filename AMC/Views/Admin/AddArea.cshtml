@{
    ViewBag.Title = "AddCity";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
    <script src="~/bvalidator/jquery.bvalidator.js"></script>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#form2').bValidator();
    });
    </script>

    @using (Html.BeginForm("AddArea", "Admin", FormMethod.Post, new { @id = "form2" }))
    {


        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <header class="panel-heading">
                        Add Areas
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                         
                                <div class="form-input">
                                    <label for="area">City Name:</label>
                                    <select name="cityname" data-bvalidator="required" class="form-control" >
                                        <option value="">Select</option>
                                        @foreach (var item in ViewData["city"] as List<AMC.EDM.City_master>)
                                        {
                                            <option value="@item.city_id">@item.city_name</option>
                                        }

                                    </select>
                                </div>
                                <div class="form-group">
                                    <label for="area">Area Name:</label>
                                    <input type="text" class="form-control" id="area" name="areaname" data-bvalidator="required">
                                   
                                </div>
                               
                                <input type="submit" value="submit" class="btn btn-info" />

                       
                        </div>

                    </div>
                </section>

            </div>
           
        </div>


    }

   

    <!-- page end-->
</div>
<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}