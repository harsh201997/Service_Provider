@{
    ViewBag.Title = "Spplan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Admin Plans</h2>



<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->
    <div class="row">
        <div class="col-lg-12">
            <header class="panel-heading">
                Add Plan Detail
            </header>
            <div class="panel-body">
                <div class="position-center">
                    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
                    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
                    <script src="~/bvalidator/jquery.bvalidator.js"></script>

                    <script type="text/javascript">
                                    $(document).ready(function () {
                                        $('#form2').bValidator();
                                    });
                    </script>

                    @using (Html.BeginForm("Spplan", "Admin", FormMethod.Post, new { @id = "form2" }))
                    {
                        <div class="form-group">
                            <label>Plan Name:</label>
                            <input type="text" class="form-control" data-bvalidator="required" name="pname" placeholder="Enter Plan Name">
                        </div>
                        
                        <div class="form-group">
                            <label>Plan Description:</label>
                            <textarea name="pdesc" rows="5" data-bvalidator="required" class="form-control"> </textarea>
                        
                        </div>
                        
                        <div class="form-group">
                            <label>Charges:</label>
                            <input type="text" class="form-control" data-bvalidator="number,required" name="charge" placeholder="Enter Plan Name">
                        </div>
                        <div class="form-group">
                            <label>Plan Duration:</label>
                            <select name="duration" data-bvalidator="required" class="form-control">
                                <option value="">--Select--</option>
                                <option value="1 year">1 year</option>
                                <option value="6 months">6 months</option>
                                <option value="4 months">4 months</option>
                            </select>
                        </div>
                        <input type="submit" name="submit" value="Submit" />

                    }

                </div>

            </div>


        </div>
        
    </div>
    

    <!-- page end-->
</div>
<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}