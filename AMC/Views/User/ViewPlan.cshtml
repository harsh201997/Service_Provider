@{
    ViewBag.Title = "ViewSp";
    Layout = "~/Views/Shared/customerlayout.cshtml";
}


<div class="table-agile-info">
    <div class="panel panel-default">
        <div class="panel-heading">
            Plan Detail
        </div>
        <div>
            <script>
                $(document).ready(function () {
                    $('#tb').DataTable();
                });
            </script>

            <link href="~/jquery.dataTables.min.css" rel="stylesheet" />
            <script src="~/jquery.dataTables.min.js"></script>
            <table id="tb" class="table" ui-jq="footable" ui-options='{
        "paging": {
          "enabled": true
        },
        "filtering": {
          "enabled": true
        },
        "sorting": {
          "enabled": true
        }}'>
                <thead>
                    <tr>
                        <th>Plan Name</th>
                        <th>Charges</th>
                        <th data-breakpoints="xs sm md">Detail</th>


                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewData["temp"] as List<AMC.EDM.Tbl_plan>)
                    {

                        <tr data-expanded="true">
                            <td>@item.plan_name</td>
                            <td>@item.charges</td>

                            <td><a href="/User/PlanDetail/@item.plan_id">Detail</a></td>


                        </tr>

                    }
                   
                </tbody>
            </table>
        </div>
    </div>
</div>