@{
    ViewBag.Title = "AddCity";
    Layout = "~/Views/Shared/customerlayout.cshtml";
    }

<div class="form-w3layouts">
    <!-- page start-->
    <!-- page start-->

    <link href="~/bvalidator/bvalidator.css" rel="stylesheet" />
    <script src="~/bvalidator/jquery-1.11.0.min.js"></script>
    <script src="~/bvalidator/jquery.bvalidator.js"></script>

    <script type="text/javascript">
    $(document).ready(function () {
        $('#form2').bValidator();
    });
    </script>
    @using (Html.BeginForm("Complaint","User", FormMethod.Post, new { @id = "form2" }))
    {


        <div class="row">
            <div class="col-lg-12">
             
                <header class="panel-heading">
                    Complain Registration
                </header>
                    <div class="panel-body">
                        <div class="position-center">
                            <div class="form-input">
                                <label for="area">Plan Name:</label>
                                <select name="plan" data-bvalidator="required" class="form-control">
                                    <option value="">Select</option>
                                    @foreach (var item in ViewData["temp"] as List<AMC.Models.UComplaint>)
                                    {
                                        <option value="@item.plan_id">@item.plan_name</option>
                                    }

                                </select>
                            </div>

                                <div class="form-group">
                                    <label for="exampleInputEmail1">Complaint Description:</label>
                                    <textarea class="form-control" data-bvalidator="required" rows="5"  name="desc" placeholder="Complaint"></textarea>
                                    @*<input type="text" class="form-control" name="desc" placeholder="Complaint">*@
                                   
                                </div>
                                <input type="submit" value="submit"/>
                           
                        </div>

                    </div>
               

            </div>
            
        </div>


    }

    

    <!-- page end-->
</div>

<script src="~/alert.js.txt"></script>
@if (ViewBag.msg != null)
{
    <script type="text/javascript">
        window.onload = function () {
            swal({
                title: "@ViewBag.msg",
                icon: "success",
            });
        };
    </script>
}
