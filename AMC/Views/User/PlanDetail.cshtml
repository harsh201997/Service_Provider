<!DOCTYPE html>
<html lang="en">

@{
    ViewBag.Title = "AddPlan";
    Layout = "~/Views/Shared/customerlayout.cshtml";
    }

<head>
    <title></title>
</head>
<body>
    <div class="form-w3layouts">
        <!-- page start-->
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
               
                    <header class="panel-heading">
                        Plan Detail 
                    </header>
                    <div class="panel-body">
                        <div class="position-center">
                            @using (Html.BeginForm())
                            {
                                var p = ViewData["temp"] as AMC.EDM.Tbl_plan;
                              
                                <div class="form-group">
                                    <label>Plan Name:</label>
                                    <input type="text" class="form-control" readonly value="@p.plan_name" name="pname">
                                </div>
                                <div class="form-group">
                                    <label>Plan Description:</label>
                                    <textarea class="form-control" readonly  name="pdesc">@p.plan_description</textarea>
                                    @*<input type="text" class="form-control" readonly value="@p.plan_description" name="pdesc">*@
                                </div>
                                <div class="form-group">
                                    <label>Plan Benifits:</label>
                                    <textarea class="form-control" readonly  name="benifits">@p.plan_benifits</textarea>
                                    @*<input type="text" class="form-control" readonly value="@p.plan_benifits" name="benifits">*@
                                </div>
                                 <div class="form-group">    
                                     <label>Plan Status:</label>
                                     <input type="text" class="form-control" readonly value="@p.plan_status" name="status">
                                </div>
                                <div class="form-group">
                                    <label>Charges:</label>
                                    <input type="text" class="form-control" readonly value="@p.charges" name="charge">
                                </div>
                                <div class="form-group">
                                    <label>Duration</label>
                                    <input type="text" class="form-control" readonly value="@p.plan_duration" name="duration">
                                </div>
                                 <input type="hidden" value="@p.sp_id" name="sp_id" />
                                <input type="hidden" value="@p.plan_id" name="pid" />

                                <div><input type="submit" class="btn btn-danger" value="Enroll-Plan" name="submit" />
                                </div>
                                
                              
                               
                            }

                        </div>

                    </div>
            

            </div>
            
        </div>
        

        <!-- page end-->
    </div>
</body>
</html>